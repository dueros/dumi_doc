{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id":"https://xiaodu.baidu.com/schema/dumi_schema.json",
    "title":"度秘ws的返回值",
    "type": "object",
    "properties": {
        "result": {
            "type":"object",
            "properties":{
                "hint":{
                    "description":"用户接下去可以输入的query建议",
                    "type":"array",
                    "items": { "type": "string" }
                },
                "cards":{
                    "description":"展示用的卡片",
                    "$ref":"#/definitions/cards"
                },
                "directives":{
                    "description":"展示用的卡片",
                    "$ref":"#/definitions/directives"
                },
                "resource":{
                    "description":"数据资源",
                    "$ref":"#/definitions/resource"
                },
                "intent":{
                    "description":"使用的da结果",
                    "$ref":"#/definitions/intent"
                },
                "speech":{
                    "description":"语音播报tts用的数据",
                    "$ref":"#/definitions/speech"
                }
            },
            "required": ["cards","speech","intent"],
            "additionalProperties":false
        },
        "ctime": {
            "type":"integer"
        },
        "cuid": {
            "type":"string"
        },
        "user_id": {
            "type":"string"
        },
        "id": {
            "type":"string"
        },
        "logid": {
            "type":"string"
        },
        "se_query": {
            "type":"string"
        },
        "status": {
            "type":"integer"
        },
        "msg": {
            "type":"string"
        }
    },
    "definitions": {
        "directives": {
            "type":"object",
            "properties":{
            }
        },
        "resource": {
            "type":"object",
            "oneOf":[
                {"$ref":"weather.schema.json"},
                {"$ref":"news.schema.json"}
            ]
        },
        "intent": {
            "type":"object",
            "properties":{
            }
        },
        "cards": {
            "type":"array",
            "items":{
                "type":"object",
                "oneOf":[
                    {
                        "type":"object",
                        "properties":{
                            "type":{
                                "type":"string",
                                "enum":["txt"]
                            },
                            "content":{
                                "type":"string"
                            },
                            "url":{
                                "type":"string"
                            }
                        }
                    },
                    {
                        "type":"object",
                        "properties":{
                            "type":{
                                "type":"string",
                                "enum":["list"]
                            },
                            "list":{
                                "type":"array",
                                "items":{
                                    "type":"object",
                                    "properties":{
                                        "title":{"type":"string"},
                                        "summary":{"type":"string"},
                                        "image":{"type":"string"},
                                        "url":{"type":"string"}
                                    }
                                }
                            }
                        }
                    },
                    {
                        "type":"object",
                        "properties":{
                            "type":{
                                "type":"string",
                                "enum":["image"]
                            },
                            "list":{
                                "type":"array",
                                "items":{
                                    "type":"object",
                                    "properties":{
                                        "src":{"type":"string"},
                                        "thumb":{"type":"string"}
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        "speech": {
            "type":"object",
            "properties":{
                "type":{
                    "type":"string",
                    "enum":["Text","SSML"]
                },
                "content":{
                    "type":"string"
                }
            }
        }
    },
    "additionalProperties": false,
    "required": [ "result","ctime","id","cuid","logid","se_query","status","msg"]
}
